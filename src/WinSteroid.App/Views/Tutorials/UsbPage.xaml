                        <ScrollViewer Grid.Row="1"
                                      Margin="0,12">
                            <RichTextBlock>
                                <RichTextBlock.Blocks>
                                    <Paragraph>
                                        <Bold>Excellent!</Bold>
                                        <LineBreak />
                                    </Paragraph>
                                    <Paragraph>
                                        Your AsteroidOS watch is now correctly plugged-in with your PC.
                                        <LineBreak />
                                    </Paragraph>
                                    <Paragraph>
                                        You can now install new Watchfaces and/or wallpapers over USB connection.
                                        <LineBreak />
                                    </Paragraph>
                                </RichTextBlock.Blocks>
                            </RichTextBlock>
                        </ScrollViewer>

                        <Button Grid.Row="2"
                                x:Name="StepButton3"
                                x:Uid="TutorialsUsbStepButton3"
                                Command="{x:Bind ViewModel.BackCommand, Mode=OneWay}" />
                    </Grid>
                </PivotItem>
