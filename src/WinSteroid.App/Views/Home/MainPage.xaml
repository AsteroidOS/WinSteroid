                                <Path Width="192" 
                                      Height="{x:Bind ViewModel.BatteryPercentage, Mode=OneWay, Converter={StaticResource BatteryPercentageToHeightConverter}, ConverterParameter=0}" 
                                      Stretch="UniformToFill"
