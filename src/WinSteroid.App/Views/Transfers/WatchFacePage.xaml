<Page
    x:Class="WinSteroid.App.Views.Transfers.WatchFacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:WinSteroid.App.Controls"
    mc:Ignorable="d"
    DataContext="{Binding TransfersWatchFace, Source={StaticResource Locator}}">

    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition />
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:AcrylicGrid Grid.Row="1" />

        <Grid Grid.Row="1"
              Background="{ThemeResource SoftAcrylicBackgroundThemeBrush}" />

        <controls:NavigationPageHeader Grid.Row="0"
                                       x:Uid="SettingsWatchFaceNavigationPageHeader"
                                       Background="{ThemeResource DefaultPaneBackground}"
                                       ButtonGlyph=""
                                       ButtonCommand="{x:Bind ViewModel.BackCommand, Mode=OneWay}" />

        <ScrollViewer Grid.Row="1">
            <StackPanel Padding="12,8"
                        Width="360"
                        HorizontalAlignment="Left">
                <TextBlock x:Uid="SettingsWatchFaceTextBlock"
                           Style="{ThemeResource BaseTextBlockStyle}" />

                <TextBox Text="{x:Bind ViewModel.SelectedFileName, Mode=OneWay}"
                         IsReadOnly="True"
                         FontWeight="SemiBold"
                         Margin="0,8,0,0"
                         Visibility="{x:Bind ViewModel.SelectedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />

                <StackPanel Orientation="Horizontal"
                            Margin="0,8,0,0">
                    <Button x:Uid="SettingsWatchFaceChooseButton"
                            Padding="12,4"
                            Margin="0,0,12,0"
                            IsEnabled="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BooleanToOppositeBooleanConverter}}"
                            Command="{x:Bind ViewModel.LoadFileCommand, Mode=OneWay}" />

                    <Button x:Uid="SettingsWatchFaceInstallButton"
                            Padding="12,4"
                            Command="{x:Bind ViewModel.UploadCommand, Mode=OneWay}"
                            IsEnabled="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BooleanToOppositeBooleanConverter}}"
                            Visibility="{x:Bind ViewModel.SelectedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                </StackPanel>

                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                           Visibility="{x:Bind ViewModel.IsUploading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,24,0,8">
                    <Run x:Uid="SettingsWatchFaceInstallationProgressRun" />
                    <Run Text="{x:Bind ViewModel.UploadProgress}" />
                </TextBlock>
                <Grid Visibility="{x:Bind ViewModel.IsUploading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True"
                                 Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />

                    <ProgressBar Value="{x:Bind ViewModel.UploadProgress, Mode=OneWay}" 
                                 Minimum="0"
                                 Maximum="100"
                                 Background="Transparent"
                                 Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" />
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
