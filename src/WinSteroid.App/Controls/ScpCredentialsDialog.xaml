<ContentDialog
    x:Class="WinSteroid.App.Controls.ScpCredentialsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SCP CONNECTION"
    PrimaryButtonText="Connect"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="OnPrimaryButtonClicked">

    <StackPanel>
        <TextBox Header="Host / IP"
                 Text="{x:Bind HostIP, Mode=TwoWay}"
                 PlaceholderText="127.0.0.1" />

        <TextBox Header="Username"
                 Text="{x:Bind Username, Mode=TwoWay}"
                 PlaceholderText="asteroid-os"
                 Margin="0,12,0,0" />

        <PasswordBox Header="Password" 
                     IsPasswordRevealButtonEnabled="True"
                     Password="{x:Bind Password, Mode=TwoWay}"
                     PlaceholderText="asteroid"
                     Margin="0,12,0,0" />

        <TextBlock Text="{x:Bind ValidationSummary, Mode=OneWay}" 
                   Foreground="Red"
                   Margin="0,12,0,0"
                   Visibility="{x:Bind ValidationSummary, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}" />
    </StackPanel>
</ContentDialog>
