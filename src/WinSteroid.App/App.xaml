<Application
    x:Class="WinSteroid.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:WinSteroid.App.Converters"
    xmlns:viewmodels="using:WinSteroid.App.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <StaticResource x:Key="DefaultPaneBackground" 
                                    ResourceKey="SystemChromeMediumHighColor" />

                    <StaticResource x:Key="DefaultPageBackground" 
                                    ResourceKey="ApplicationPageBackgroundThemeBrush" />

                    <Color x:Key="SystemChromeMediumColor">#FF1F1F1F</Color>

                    <Color x:Key="SystemChromeMediumHighColor">#FF323232</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Default">
                    <StaticResource x:Key="DefaultPaneBackground" 
                                    ResourceKey="SystemChromeMediumHighColor" />

                    <StaticResource x:Key="DefaultPageBackground" 
                                    ResourceKey="ApplicationPageBackgroundThemeBrush" />

                    <Color x:Key="SystemChromeMediumColor">#FF1F1F1F</Color>

                    <Color x:Key="SystemChromeMediumHighColor">#FF323232</Color>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <StaticResource x:Key="DefaultPaneBackground" 
                                    ResourceKey="SystemChromeMediumHighColor" />

                    <StaticResource x:Key="DefaultPageBackground" 
                                    ResourceKey="ApplicationPageBackgroundThemeBrush" />

                    <Color x:Key="SystemChromeMediumColor">#FFE6E6E6</Color>

                    <Color x:Key="SystemChromeMediumHighColor">#FFE6E6E6</Color>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            
            <viewmodels:ViewModelLocator x:Key="Locator" />

            <converters:BatteryLevelToBrushConverter x:Key="BatteryLevelToBrushConverter" />

            <converters:BatteryLevelToColorConverter x:Key="BatteryLevelToColorConverter" />

            <converters:BatteryLevelToVisibilityConverter x:Key="BatteryLevelToVisibilityConverter" />

            <converters:BatteryPercentageToHeightConverter x:Key="BatteryPercentageToHeightConverter" />

            <converters:BooleanToCornerRadiusConverter x:Key="BooleanToCornerRadiusConverter" />

            <converters:BooleanToGridLengthConverter x:Key="BooleanToGridLengthConverter" />

            <converters:BooleanToOppositeBooleanConverter x:Key="BooleanToOppositeBooleanConverter" />

            <converters:BooleanToOppositeVisibilityConverter x:Key="BooleanToOppositeVisibilityConverter" />

            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <converters:ApplicationIconToGlyphConverter x:Key="ApplicationIconToGlyphConverter" />

            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

            <converters:NumberToBatteryIconConverter x:Key="NumberToBatteryIconConverter" />

            <converters:NumberToPercentageTextConverter x:Key="NumberToPercentageTextConverter" />

            <converters:NumberToVibrationLevelStringConverter x:Key="NumberToVibrationLevelStringConverter" />

            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

            <converters:VibrationLevelToNumberConverter x:Key="VibrationLevelToNumberConverter" />

            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
